# =============================================================================
# TrustOps Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# Variables marked [required] must be set for production.
# Variables marked [optional] are only needed for specific features.
# =============================================================================

# --- Database [required] ---
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/trustops?schema=public"

# --- Authentication [required] ---
# Generate with: openssl rand -base64 32
AUTH_SECRET="<generate-a-random-secret-min-32-chars>"
AUTH_URL="http://localhost:3000"

# --- Email / Magic Links [required] ---
EMAIL_SERVER="smtp://localhost:1025"          # Mailhog for dev
EMAIL_FROM="noreply@trustops.local"

# --- Demo Mode ---
# Set to "1" to bypass auth and use static demo data (no database needed)
# WARNING: Never enable in production (NODE_ENV=production)
TRUSTOPS_DEMO=0

# --- AI Features [optional] ---
# At least one AI provider key is needed for copilot features
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# --- GitHub Integration [optional] ---
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# --- AWS Integration [optional] ---
AWS_ROLE_ARN=""
AWS_EXTERNAL_ID=""

# --- File Storage [optional] ---
# Set STORAGE_PROVIDER to "s3" and configure bucket for production
STORAGE_PROVIDER="local"
S3_BUCKET=""
AWS_REGION="us-east-1"
S3_ENDPOINT=""                               # For R2, MinIO, etc.

# --- Monitoring [optional] ---
SENTRY_DSN=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# --- Cron Jobs [required for production] ---
# Protects cron endpoints from unauthorized access
CRON_SECRET=""

# --- Slack Notifications [optional] ---
SLACK_WEBHOOK_URL=""

# --- Encryption [required for production] ---
# Used to encrypt integration tokens at rest (32 bytes hex = 64 chars)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=""
